@model EmgenexBusinessPortal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Confirm ChangePassword";
    Layout = null;
}
<link href="/Controlpanel/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
<link href="/Content/style.css" rel="stylesheet" />
<div class="container">
    <div class="common-login-page">
        <div class="careconnect-logo">
            <a href="#"><img src="/Controlpanel/Content/images/careconnect-logo.png" class="img-responsive"></a>
             CRM
        </div>
        <div class="common-login-form">
            <div class="form-group">
                @using (Html.BeginForm("ConfirmChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    @Html.HiddenFor(model => model.Id)
                    <div class="form-group">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control formbox pass-img", id = "cc-username", required = "required", placeholder = "New Password" } })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control formbox pass-img", id = "cc-password", required = "required", placeholder = "ConfirmPassword" } })
                    </div>
                    <button type="submit" id="submit" class="btn btn-default cc-btn">Save</button>
                }

            </div>
        </div>
        <span class="copy">
            Copyright © @DateTime.UtcNow.Year CareConnect Systems.<br /> All rights reserved.
        </span>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



