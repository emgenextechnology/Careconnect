@model EmgenexBusinessPortal.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = null;
}


<link href="/Controlpanel/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
<link href="/Content/style.css" rel="stylesheet" />
<div class="container">
    <div class="common-login-page">
        <div class="careconnect-logo">
            <a href="#"><img src="/Controlpanel/Content/images/careconnect-logo.png" class="img-responsive"></a>
            CRM
        </div>
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="common-login-form">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.IsBusinessLogin)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control formbox ", id = "cc-username", required = "required", placeholder = "Enter your email." } })

                </div>
                <button type="submit" id="submit" class="btn btn-default cc-btn">Submit</button>

                <div class="checkbox">
                    @Html.ActionLink("Go to Login", "Index","Home")<br />
                </div>
            </div>
        }
        <span class="copy">
            Copyright © @DateTime.UtcNow.Year CareConnect Systems.<br /> All rights reserved.
        </span>
    </div>
</div>