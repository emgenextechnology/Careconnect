@model EmgenexBusinessPortal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "BusinessConfirmChangePassword";
    Layout = null;
    var route ="/"+Model.BusinessName.Replace(" ","-") + "/BusinessUserConfirmation";
}

<style>
    .Remembercheckbox {
        text-align: center;
        font-size: 18px;
        color: #4c4c4c;
    }

        .Remembercheckbox label, .radio label {
            min-height: 20px;
            padding-left: 20px;
            margin-bottom: 0;
            font-weight: 400;
            cursor: pointer;
        }
</style>

<link href="/Controlpanel/Content/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
<link href="/Content/style.css" rel="stylesheet" />
<div class="container">
    <div class="common-login-page">
        <div class="careconnect-logo">
            <a href="#"><img src="@Model.BusinessLogo" onerror="this.src='/Assets/Logo_Not_Available.jpg';" class="img-responsive"></a> @Model.BusinessName Login
        </div>
        <div class="common-login-form">
            @*@using (Html.BeginForm("BusinessConfirmChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))*@
            @using (Html.BeginForm(null,null,FormMethod.Post, new {@action=route, @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.IsBusinessLogin)
                @Html.HiddenFor(model => model.BusinessName)
                @Html.HiddenFor(model => model.BusinessLogo)
                <div class="form-group">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control formbox pass-img", id = "cc-username", required = "required", placeholder = "New Password" } })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control formbox pass-img", id = "cc-password", required = "required", placeholder = "ConfirmPassword" } })
                </div>
                <button type="submit" id="submit" class="btn btn-default cc-btn">Save</button>
            }
        </div>
        <span class="copy"><a href="#"><img src="/Controlpanel/Content/images/careconnect-logo.png" class="img-responsive"></a></span>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







