                @Html.ListBoxFor(model => model.ManagerIds, EmgenexBusinessPortal.Helpers.LookUps.GetManagers(Context.GetCurrentBusinessId()), new { @class = "js-example-basic-multiple form-control", multiple = "multiple" })
