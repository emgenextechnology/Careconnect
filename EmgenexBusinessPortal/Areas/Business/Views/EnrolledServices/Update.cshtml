@model EmgenexBusinessPortal.Areas.Business.Models.LookupServiceColumnsModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Business/Views/Shared/_Layout.cshtml";
}
<h2>Update</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Lookup Service Column</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ColumnId)
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                @Html.ValidationMessage("Error", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ColumnLookups", new { id = Model.ColumnId })
</div>