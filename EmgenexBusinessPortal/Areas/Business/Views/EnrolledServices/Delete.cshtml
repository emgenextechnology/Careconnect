@model EBP.Business.Database.LookupEnrolledService

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Business/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Services</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Service Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ServiceName)
        </dd>

        <dt>
            @Html.DisplayName("Active")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt>
            @Html.DisplayName("Import Mode")
        </dt>

        <dd>
            @{var ImportMode = EBP.Business.Enums.EnumHelper.GetEnumName<EBP.Business.Enums.ServiceReportImportModes>(Model.ImportMode.HasValue ? Model.ImportMode.Value : (int)EBP.Business.Enums.ServiceReportImportModes.FileSystem);}
            @ImportMode
        </dd>

        @if (Model.ImportMode == (int)EBP.Business.Enums.ServiceReportImportModes.BoxAPI)
        {
            <dt>
                @Html.DisplayName("Box Url")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BoxUrl)
            </dd>
        }

        <dt>
            @Html.DisplayName("Created On")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOn)
        </dd>

        <dt>
            @Html.DisplayName("Created By")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>

        <dt>
            @Html.DisplayName("Updated On")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedOn)
        </dd>
        <dt>
            @Html.DisplayName("Updated By")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User1.FirstName)
        </dd>

    </dl>
    @Html.ValidationMessage("Error", new { @class = "text-danger" })
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
